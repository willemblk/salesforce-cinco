<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>phone_format_validation</fullName>
    <active>false</active>
    <errorConditionFormula>!REGEX(Phone,&quot;^\\+?[1-9]\\d{1,14}$&quot;)</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Graag telefoonnummer in het internationaal 164. format noteren  vb: +316xxx</errorMessage>
</ValidationRule>
